<% include ../partials/header.ejs %> <% posts.forEach(function(item){ %>

<div class="container">
  <div class="col s12 m7">
    <div class="card horizontal post-card">
      <div class="card-image ">
        <img src="<%= item.image %>" class="post-card-image" width="150px" height="150px" />
      </div>
      <div class="card-stacked">
        <div class="card-content">
            <h4><a href="#"><%= item.title %></a></h4>
            <span class="post-card-date">Date: <%= item.created.toLocaleDateString() %>&nbsp; &nbsp; By: <%= item.author.username %></span>
            <p><%= item.content.slice(0, 150) %>...</p>
        </div>
        <div class="card-action">
          <a class="" href="/blog/<%= item._id %>"
            >Read More <i class="angle double right icon"></i
          ></a>
        </div>
      </div>
    </div>
  </div>
</div>
<% }) %> <% include ../partials/footer.ejs %>
